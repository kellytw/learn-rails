gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'

gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0',          group: :doc
gem 'spring',        group: :development

# Learn Rails Gems #Gems are reusable code
gem 'activerecord-tableless' 
gem 'figaro' #allows us to create passwords, api keys
gem 'foundation-rails'
gem 'gibbon' #allows us to connect mailchimp
gem 'google_drive' #allows us to connect google google_drive
gem 'high_voltage' 
